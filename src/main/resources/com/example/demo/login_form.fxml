<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.LoginController">
    <padding><Insets bottom="40" left="40" right="40" top="40" /></padding>
    <columnConstraints>
        <ColumnConstraints>
        </ColumnConstraints>
        <ColumnConstraints>
        </ColumnConstraints>
      <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="200.0" />
    </columnConstraints>

    <!-- Add Email Label -->
    <Label text="Username : " GridPane.columnIndex="2" GridPane.rowIndex="2">
    </Label>
    <!-- Add Email Text Field -->
    <TextField fx:id="emailIdField" prefHeight="40" GridPane.columnIndex="3" GridPane.rowIndex="2" />



    <!-- Add Password Label -->
    <Label text="Password : " GridPane.columnIndex="2" GridPane.rowIndex="3">
    </Label>
    <!-- Add Password Field -->
    <PasswordField fx:id="passwordField" prefHeight="40" GridPane.columnIndex="3" GridPane.rowIndex="3" />


    <!-- Add Submit Button -->
    <Button fx:id="submitButton" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" onAction="#login" prefHeight="40" prefWidth="100" text="Submit" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
    </Button>
    <Button fx:id="signupButton" defaultButton="true" onAction="#signup" prefHeight="40" prefWidth="100" text="Sign up" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20.0" left="400.0" top="20.0" />
        </GridPane.margin>
    </Button>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
